<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:deepbaytech="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_time"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/ll_left"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <com.example.propertyanimation.circleimageview.XfermodeRoundImageView
                android:id="@+id/user_iv"
                android:layout_width="@dimen/x132"
                android:layout_marginLeft="@dimen/x20"
                android:src="@drawable/page_img_a"
                android:layout_gravity="center_vertical"
                deepbaytech:borderRadius="20dip"
                android:layout_marginRight="@dimen/x10"
                deepbaytech:imageType="circle"
                android:layout_height="@dimen/x132"/>
            <TextView
                android:id="@+id/tv_msg_receive"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:background="@drawable/receive_msg_pres"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/ll_right"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:id="@+id/tv_msg_send"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_marginRight="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/send_msg_normal"
                android:paddingLeft="15dp"
                android:layout_height="wrap_content" />
            <com.example.propertyanimation.circleimageview.XfermodeRoundImageView
                android:id="@+id/user_iv_other"
                android:layout_width="@dimen/x132"
                android:layout_marginLeft="@dimen/x10"
                android:src="@mipmap/test"
                android:layout_gravity="center_vertical"
                deepbaytech:borderRadius="20dip"
                android:layout_marginRight="@dimen/x20"
                deepbaytech:imageType="circle"
                android:layout_height="@dimen/x132"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>