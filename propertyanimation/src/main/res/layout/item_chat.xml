<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_time"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/ll_left"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="60dp"
                android:background="@drawable/avatar_left"
                android:layout_height="60dp" />
            <TextView
                android:id="@+id/tv_msg_receive"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:background="@drawable/receive_msg_pres"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/ll_right"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:id="@+id/tv_msg_send"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_marginRight="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/send_msg_normal"
                android:paddingLeft="15dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="60dp"
                android:background="@drawable/avatar_10"
                android:layout_height="60dp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>